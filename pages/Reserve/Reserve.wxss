/* Reserve.wxss */
.container{
  margin-left: 30rpx;
  margin-right: 30rpx;
}

.recomend{
  width: 100%;
  height: 420rpx;
}
.recomend>image{
  position: relative;
  display: block;
  width: 100%;
  height: 420rpx;
}
.recomend>view{
  position: relative;
  top: -74rpx;
  left: 20rpx;
  z-index: 100;
  font-size: 56rpx;
  line-height: 56rpx;
}
.recomend::after{
  content: " ";

  position: relative;
  top: -266rpx;
  
  display: block;
  width: 0 !important;
  height: 0 !important;

  border-style: solid;
  border-width: 210rpx 0 0 374rpx;
  border-color: transparent transparent transparent rgba(255, 255, 255, 0.8);

  z-index: 50;
}
.signal{
  float: left;
  width: 218rpx;
}
.signal>image{
  width: 100%;
}
.signal>view{
  position: relative;
  top: -54rpx;
  left: 4rpx;
  z-index: 100;
  font-size: 40rpx;
  line-height: 40rpx;
}
.signal::after{
  content: " ";

  position: relative;
  top: -150rpx;
  
  display: block;
  width: 0 !important;
  height: 0 !important;

  border-style: solid;
  border-width: 100rpx 0 0 218rpx;
  border-color: transparent transparent transparent rgba(255, 255, 255, 0.8);

  z-index: 50;
}
.signal:not(:last-child){
  margin-right: 18rpx;
}