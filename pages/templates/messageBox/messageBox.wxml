<!--messageBox.wxml-->
<template name="messageBox">
  <view class="messageBox {{direction}}">
    <image class="avatar" src="{{avatarUrl}}"></image>
    <view class="msg msg-text" wx:if="{{type=='text'}}">{{content}}</view>
    <view class="msg msg-image" wx:if="{{type=='image'}}">
      <image mode="widthFix" src="{{content}}"></image>
    </view>
  </view>
</template>
