/* Message.wxss */
.chat-item {
  border-bottom: 1px solid #D7D7D7;

  display: flex;
  flex-direction: row;
  overflow: hidden;
}
.unread:after {
  content: "";

  position: absolute;
  top: 80rpx;
  right: 20rpx;
  border-radius: 100%;

  width: 10px;
  height: 10px;
  
  background: red;
}
.avatar {
  /*float: left;*/

  height: 102rpx;
  width: 102rpx;
  margin: 17rpx;
  margin-right: 0;
  border-radius: 100%;

  flex-shrink: 0;
}
.detail {
  position: relative;
  flex-grow: 1;  

  display: block;
  margin-left: 27rpx;
}
.name {
  display: block;
  margin-top: 28rpx;
  
  font-size: 33rpx;
  line-height: 33rpx;
  color: #353535;
}
.time {
  position: absolute;
  right: 20rpx;
  top: 30rpx;

  font-size: 23rpx;
  line-height: 23rpx;
  color: #9b9b9b;
}
.last-msg {
  display: block;
  margin-top: 17rpx;

  font-size: 28rpx;
  line-height: 28rpx;
  color: #9b9b9b;
}